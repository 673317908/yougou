/* pages/user/index.wxss */
page{
  background-color: #f4f4f4;
  position: relative;
}
/* 用户 */
.user{
  height: 400rpx;
  width: 750rpx;
  background-color: #eb4450;
}
.user-title{
  display: flex;
  flex-direction: column;
  justify-items: center;
  align-items: center;
}
.user-header{
  height: 140rpx;
  width: 140rpx;
  border: 1rpx solid white;
  border-radius: 50%;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}
button{
   height: 140rpx;
  width: 140rpx;
  border-radius: 50%;
  opacity: 0;
}
.user-name{
  color: white;
}
/* 导航 */
.nav{
  width: 720rpx;
  height: 122rpx;
  margin: 0 15rpx;
  display: flex;
  background: #ffff;
  position: absolute;
  top: 360rpx;
}
.store{
  flex: 1;
  flex-direction: column;
  justify-items: center;
  align-items: center;
  text-align: center;
  color: #6666;
}
.detail{
  flex: 1;
  flex-direction: column;
  justify-items: center;
  text-align: center;
  align-items: center;
   color: #6666;
}
.attention{
  flex: 1;
  flex-direction: column;
  justify-items: center;
  text-align: center;
  align-items: center;
   color: #6666;
}
.spoor{
  flex: 1;
  flex-direction: column;
  justify-items: center;
  text-align: center;
  align-items: center;
  color: #6666;
}
.number{
  color: #9999;
}
/* 我的订单 */
.orderForm{
  background-color: white;
  margin: 120rpx 15rpx 20rpx 15rpx;
}
.myForm{
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 1rpx solid #ccc;
}